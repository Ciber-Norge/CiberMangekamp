%haml
  %head
    %title Ciber Mangekamp

  %body
    %h1
      Mass edit results
      
    = form_tag(action: 'mass_update') do
      - @event.participants.each do | participant |
        - result = @event.results.find_by_participant_id(participant.id)
        = label_tag(participant.id, participant.user.name)
        - if result
          = text_field_tag("participants[#{participant.id}[score]]", result.score)
          = text_field_tag("participants[#{participant.id}[rank]]", result.rank)
        - else
          = text_field_tag("participants[#{participant.id}[score]]")
          = text_field_tag("participants[#{participant.id}[rank]]")
        %br
      = submit_tag
    %br  
    = link_to 'Tilbake', event_path(@event)
